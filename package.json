{
  "name": "47ng.com",
  "version": "0.0.0-semantically-released",
  "description": "Website for https://47ng.com",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Fran√ßois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/47ng/47ng.com"
  },
  "scripts": {
    "dev": "next",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build:next": "next build",
    "build:export": "next export",
    "build": "run-s build:next build:export",
    "ci": "run-s test build"
  },
  "dependencies": {
    "@47ng/chakra-next": "^2.4.2",
    "@chakra-ui/core": "^0.8.0",
    "@emotion/core": "^10.1.1",
    "@emotion/styled": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "next": "^10.0.6",
    "next-seo": "^4.19.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^17.0.15",
    "commitlint": "^11.0.0",
    "husky": "4.x",
    "jest": "^26.6.3",
    "next-transpile-modules": "^6.3.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "clean",
          "doc",
          "feat",
          "fix",
          "perf",
          "ref",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "sentence-case"
      ],
      "body-leading-blank": [
        2,
        "always",
        true
      ]
    }
  }
}
